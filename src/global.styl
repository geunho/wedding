@import '../node_modules/bootstrap/dist/css/bootstrap.css'
@import './variables.styl'
@font-face {
  font-family: 'Jeongum';
  font-style: normal;
  font-weight: 300;
  src: url('//cdn.jsdelivr.net/korean-webfonts/1/corps/seoul/Jeongum/Jeongum.woff2') format('woff2'), url('//cdn.jsdelivr.net/korean-webfonts/1/corps/seoul/Jeongum/Jeongum.woff') format('woff')
}

.jeongum * {
  font-family: 'Jeongum', serif;
}

/* Tags */

body {
  color: $text-color
  background: #fff
  font-family: 'Jeongum'
  font-weight: 300
  font-size: 14.5px
  padding-top: 90px
}

a {
  color: $link-color
}

h1,
h2,
h3,
h4,
h5 {
  font-family: 'Jeongum'
  font-weight: 300
}

blockquote {
  padding: 15px
  font-size: 13.5px
  border-left: 0px
}

input[type="text"], textarea {
  outline: none
  box-shadow: none !important
}

/* Classes */

.container-footer {
  height: 70px
  font-size: 11px
  background-color: #fafafa
}

.page-header {
  margin-top: 0
  border-color: $border-color
  color: #aaa
}

.map-container {
  border-color: $border-color
  border-top: 1px solid #eee
  border-bottom: 1px solid #eee
}

.btn {
  font-family: 'Jeongum'
  font-weight: 300
}


.panel {
  border-color: $border-color
  -webkit-box-shadow: 0 0 0 rgba(0, 0, 0, 0)
  box-shadow: 0 0 0 rgba(0, 0, 0, 0)
  h3 {
    margin-top: 0
  }
  .panel-body > h2 {
    margin-top: 0
  }
}

.input-group-addon {
  background-color: #fff
  border-color: $border-color
  border-top-width: 0
  border-bottom-width: 0
  border-right-width: 0
  border-radius: 0
  padding-right: 0
}

.navbar-brand {
  font-family: 'Jeongum'
  font-weight: 300
  font-size: 25px
  letter-spacing: 1.5px
  line-height: 0.8em
  margin-top: 0px
  top: -5px
}
